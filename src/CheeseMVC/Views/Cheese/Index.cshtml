@* Declare ViewModel we want to use  *@
@model List<CheeseMVC.Models.Cheese>  

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0) @* Model refers to the passed in List<CheeseMVC.Models.Cheese> *@
{
    <p>No cheeses yet!</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
        </tr>
    }
</table>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
